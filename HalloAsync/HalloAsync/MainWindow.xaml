<Window x:Class="HalloAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HalloAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <StackPanel Margin="20">
        <Button Click="StartOhne" IsEnabled="False">Start ohne Thread</Button>
        <Button Click="StartTask">Start Task (Dispatcher)</Button>
        <Button Click="StartTaskMitTS">Start Task (TS)</Button>
        <Button Click="StartAA">Start Async/Await</Button>
        <Button Click="StartAlteFunction">Start Alte Funktion</Button>
        
        <ProgressBar Name="pb1" Height="22"/>
        <Button Click="Abort">Abbrechen</Button>
    </StackPanel>
</Window>
